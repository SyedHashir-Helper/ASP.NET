@model List<Category>

@section title {
	<h2 class="text-center my-4">Categories</h2>
}
<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
	    <div class="ml-auto">
            <a class="btn" style="background-color: #3A3335; color: #FDF0D5;" asp-controller="categories" asp-action="add">
			    <i class="fas fa-plus"></i>
		    </a>
	    </div>
    </div>

    <table class="table table-striped table-hover">
        <thead style="background-color: #3A3335; color: #FDF0D5;">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-sm btn-danger" asp-controller="categories" asp-action="delete" asp-route-categoryId="@category.CategoryId" onclick="return confirmDelete()">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Optional custom styles */
    .table th, .table td {
        vertical-align: middle; /* Center content vertically */
    }

    .btn {
        margin-right: 0.5rem; /* Spacing between action buttons */
    }
</style>

@section Scripts{
	<script>
		function confirmDelete(){
			return confirm("Are you sure you want to delete it?")
		}
	</script>
}